<%= simple_form_for(@contest) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :contestName, label: 'Contest Name' %>
    <%= f.input :startDateTime, label: 'Start Date and Time', start_year: Time.now.year-20, end_year: Time.now.year+5 %>
    <%= f.input :endDateTime, label: 'End Date and Time', start_year: Time.now.year-20, end_year: Time.now.year+5 %>
    <%= f.association :user, :as=>:hidden,:input_html=> { :value => current_user.id} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
 