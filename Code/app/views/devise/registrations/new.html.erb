<h2>Sign Up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal' }) do |f| %>

 <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :username, label: 'User Name', required: true %>
  	<%= f.input :name, label: 'Name', required: true %>
    <%= f.input :email, label: 'Email ID', required: true, autofocus: true %>
    <%= f.input :dateOfBirth, label: 'Date of Birth', start_year: Time.now.year-30, end_year: Time.now.year+5, required: false %>
    <%= f.input :country, label: 'Country', required: false %>
    <%= f.input :aboutMe, label: 'Motto', required: false %>
    <%= f.collection_radio_buttons :occupation, [['Student',"Student"],["Professional","Professional"]],:first,:last %>

    <%= f.input :institution, label: 'Institution', required: false %>
    <%= f.input :password, label: 'Password', required: true %>
    <%= f.input :password_confirmation,label: 'Re-enter password', required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
